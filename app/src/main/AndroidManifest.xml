<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nkosi.buildingmanteinancefront" >
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light">
        <activity
            android:name=".views.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.AddBuildingManager"
            android:label="@string/title_activity_add_building_manager" >
        </activity>
        <activity
            android:name=".views.DisplayMenu"
            android:label="@string/title_activity_display_menu" >
        </activity>
        <activity
            android:name=".views.RegisterActivity"
            android:label="@string/title_activity_register" >
        </activity>
    </application>

</manifest>
